{
  "compilerOptions": {
    "baseUrl": "src/",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "dist/",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test.*"]
}
